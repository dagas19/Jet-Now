<div class="banner">
</div>
<div class="bottom d-flex justify-content-center align-items-center">
  <div style="margin-right: 50px;">
    <h3 class="display-5">Private Jets Catalog</h3>
  </div>
  <div>
    <hr>
  </div>
</div>
<div class="container mt-3">
    <%= simple_form_for "", url: jets_path, wrapper: :inline_form,
  html: { class: "form-inline" },
  wrapper_mappings: {
    boolean: :inline_boolean
  } do |f| %>
      <%= f.label 'You can pick a city', class: "p-2" %>
      <%= f.input :city, label: "You can select city", placeholder_text: "please select city", collection: Jet::LOCATIONS, prompt: :translate, placeholder_text: "-- Select strands --" %>
      <div class="form-group row mb-0">
        <div class="col-sm-9 offset-sm-3">
      <%= f.submit value: "search", class: "btn btn-outline-secondary", style: "border-radius: 5px;" %>
      </div>
  </div>
    <% end %>
</div>
<div class="container mt-3">
  <div class="row justify-content-center">
    <% @jets.each do |jet| %>
    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 mb-4 spec">
      <div id="d" class="card text" style="width: 16rem; height: 19rem;">
        <% if jet.photo.attached? %>
        <%= cl_image_tag jet.photo.key, width: 600, height: 200, crop: :fit, class: "hover" %>
        <% else %>
        <img src="https://www.google.com/imgres?imgurl=https%3A%2F%2Fcdn-image.departures.com%2Fsites%2Fdefault%2Ffiles%2F1572446921%2Fheader-general-private-jet-on-tarmac-BESTJETCOMP1019.jpg&imgrefurl=https%3A%2F%2Fwww.departures.com%2Ftravel%2Ftop-private-jet-companies-to-know&tbnid=TTpAbWa5oorIZM&vet=12ahUKEwj63pTjhJHsAhWigM4BHcUDDfkQMygBegUIARDWAQ..i&docid=DLeHzjzHiNI-bM&w=2000&h=1333&q=private%20jet%20plane&ved=2ahUKEwj63pTjhJHsAhWigM4BHcUDDfkQMygBegUIARDWAQ" />
        <% end %>
        <div class="card-body">
          <h5 class="card-title" ><%= jet.model %></h5>
        </div>
      </div>
      <div class="triangle-right">
      </div>
      <div>
        <%= link_to "Learn More", jet_path(jet), class: "btn btn-primary more" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
<script type="text/javascript">
    document.getElementById("d").onclick = function () {
        location.href = "http://localhost:3000/jets/1";
    };
</script>
