<div class="banner">
</div>
<div class="bottom d-flex justify-content-center align-items-center">
  <div style="margin-right: 50px;">
    <h3 class="display-5">Private Jets Catalog</h3>
  </div>
  <div>
    <hr>
  </div>
</div>
<div class="container">
    <%= simple_form_for "", url: jets_path, method: :get, wrapper_mappings: {
    boolean:       :custom_boolean,
    check_boxes:   :custom_collection,
    date:          :custom_multi_select,
    datetime:      :custom_multi_select,
    file:          :custom_file,
    radio_buttons: :custom_collection,
    range:         :custom_range,
    time:          :custom_multi_select,
    select:        :custom_multi_select
  } do |f| %>
      <%= f.input :passenger, as: :radio_buttons, collection: Jet::PASSENGERS, wrapper: :custom_collection_inline %>
      <%= f.input :city, placeholder: "please select city", collection: Jet::LOCATIONS, prompt: :translate, placeholder_text: "-- Select strands --" %>
      <div class="form-group row mb-0">
        <div class="col-sm-9 offset-sm-3">
      <%= f.submit class: "btn btn-primary btn-lg" %>
      </div>
  </div>
    <% end %>
</div>
<div class="container mt-5">
  <div class="row justify-content-center">
    <% @jets.each do |jet| %>
    <div class="col-xs-12 col-sm-6 col-lg-3 mb-4 spec">
      <div class="card text" style="width: 16rem; height: 19rem;">
        <% if jet.photo.attached? %>
        <%= cl_image_tag jet.photo.key, width: 600, height: 200, crop: :fit, class: "hover" %>
        <% else %>
        <img src="https://www.google.com/imgres?imgurl=https%3A%2F%2Fcdn-image.departures.com%2Fsites%2Fdefault%2Ffiles%2F1572446921%2Fheader-general-private-jet-on-tarmac-BESTJETCOMP1019.jpg&imgrefurl=https%3A%2F%2Fwww.departures.com%2Ftravel%2Ftop-private-jet-companies-to-know&tbnid=TTpAbWa5oorIZM&vet=12ahUKEwj63pTjhJHsAhWigM4BHcUDDfkQMygBegUIARDWAQ..i&docid=DLeHzjzHiNI-bM&w=2000&h=1333&q=private%20jet%20plane&ved=2ahUKEwj63pTjhJHsAhWigM4BHcUDDfkQMygBegUIARDWAQ" />
        <% end %>
        <div class="card-body">
          <h5 class="card-title" ><%= jet.model %></h5>
        </div>
      </div>
      <div class="triangle-right">
      </div>
      <div>
        <%= link_to "Learn More", jet_path(jet), class: "btn btn-primary more" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
