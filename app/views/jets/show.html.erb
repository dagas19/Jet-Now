<div class="bottom d-flex justify-content-center align-items-center mb-5">
  <div style="margin-right: 50px;">
    <h3 class="display-5"><%= @jet.model.truncate_words(1)%></h3>
  </div>
  <div>
    <hr>
  </div>
</div>
<div class="container m-5">
    <div class="row">
      <div class="col-8">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <% if @jet.photo.attached? %>
              <%= cl_image_tag @jet.photo.key, width: 700, height: 550, crop: :fit %>
              <% else %>
              <img src="https://www.google.com/imgres?imgurl=https%3A%2F%2Fcdn-image.departures.com%2Fsites%2Fdefault%2Ffiles%2F1572446921%2Fheader-general-private-jet-on-tarmac-BESTJETCOMP1019.jpg&imgrefurl=https%3A%2F%2Fwww.departures.com%2Ftravel%2Ftop-private-jet-companies-to-know&tbnid=TTpAbWa5oorIZM&vet=12ahUKEwj63pTjhJHsAhWigM4BHcUDDfkQMygBegUIARDWAQ..i&docid=DLeHzjzHiNI-bM&w=2000&h=1333&q=private%20jet%20plane&ved=2ahUKEwj63pTjhJHsAhWigM4BHcUDDfkQMygBegUIARDWAQ" />
              <% end %>
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="https://res.cloudinary.com/dd0q8x2lk/image/upload/v1601563779/fs_Pilatus-Aircraft-Ltd-PC-24-cabin-03_gzaqh8.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="https://res.cloudinary.com/dd0q8x2lk/image/upload/v1601564102/72768789224809867e5df20d1fdf4fe8_anohte.png" alt="Third slide">
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>

      </div>
    <div class="col-4">
      <div class="card-b text-xs-left">
        <h1><%= @jet.model %></h1>
        <h2>
          <p><strong>Max speed:</strong><br><%= @jet.max_speed %><em>km/h</em></p>
          <p><strong>Max range:</strong><br><%= @jet.max_range%><em>km</em></p>
          <p><strong>Price hourly:</strong><br><%= @jet.price_hourly%><em>$</em></p>
          <p><strong>Description:</strong><br><%= @jet.description%></p>
        </h2>
    </div>
      <div class="book">
        <%= link_to "BOOK NOW", new_jet_booking_path(@jet), class: "btn btn-primary mb-n3" %>
      </div>
    </div>
  </div>
</div>


