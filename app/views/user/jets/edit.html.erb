<div class="container">
  <div class="row justify-content-center">
    <div class="col-6 display-block-inline">
      <h1>Edit your jet details</h1>
      <div class="formulaire">
        <%= simple_form_for [:user, @jet] do |f| %>
          <%= f.input :model, label: "Model" %>
          <%= f.input :description, label: "Description about the jet" %>
          <%= f.input :price_hourly, label: "Price hourly $" %>
          <%= f.input :max_speed, label: "Maximum speed km/h"%>
          <%= f.input :passenger_capacity %>
          <%= f.input :max_range, label: "Maximum range in meters" %>
          <%= f.input :fuel_consumption, label: "Fuel consumption l/km" %>
          <%= f.input :location %>
          <%= f.input :photo, as: :file %>
          <%= f.button :submit, class: "btn btn-success" %>
        <% end %>
        <div>
          <%= link_to "Remove my jet", user_jet_path(@jet), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-warning mb-n3" %>
        </div>
      </div>
    </div>
  </div>
</div>
